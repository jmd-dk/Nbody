# Directory of this parameter file (non-parameter variable)
_this_dir = os.path.dirname(paths['params'])

# Input/output
initial_conditions = _this_dir + '/IC'
snapshot_type      = 'GADGET-2'
output_dirs        = {'snapshot': _this_dir + '/output'}
